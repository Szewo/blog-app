{% extends 'base.html.twig' %}

{% block body %}
    {% for post in all_posts %}
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mb-3" style="max-width: 800px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="{{ 'assets/images/' ~ post.image }}" class="img-fluid rounded-start"
                                 alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">{{ post.title() }}</h5>
                                <p class="card-text">{{ post.content }}</p>
                                <p class="card-text"><a href="{{ path('app_edit_post', {id: post.id}) }}"> EDIT </a></p>
                                <p class="card-text"><a class="text-danger"
                                                        href="{{ path('app_delete_post', {id: post.id}) }}"> DELETE </a>
                                </p>
                                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}